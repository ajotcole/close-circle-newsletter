# Book
type Book {
  id: ID!
  title: String
  pages: Int
  author: Author
}

# Author
type Author {
  name: String
}

# Mail
type Mail {
  receipients: [MailReceipient!]!
  subject: String
  message: String
}

# Mail Receipient
type MailReceipient {
  name: String
  email: String
}

# Queries
type Query {
  allBooks: [Book]
  bookById(id: ID!): Book
}

# Mutations
type Mutation {
  updateBook(id: ID!, title: String): Book
  sendMail(mail: Mail): Boolean
}
